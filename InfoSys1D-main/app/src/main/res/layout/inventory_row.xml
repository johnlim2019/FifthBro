<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="16dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/bookingUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="User:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/bookingStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="@id/bookingUserName"
                app:layout_constraintTop_toBottomOf="@id/bookingUserName"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/bookingEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="@id/bookingStartTime"
                app:layout_constraintTop_toBottomOf="@id/bookingStartTime"
                android:layout_marginTop="2dp"
                />


            <TextView
                android:id="@+id/displayUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toRightOf="@id/bookingUserName"
                app:layout_constraintTop_toTopOf="@id/bookingUserName"
                />

            <TextView
                android:id="@+id/displayStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/bookingStartTime"
                app:layout_constraintLeft_toLeftOf="@id/displayUserName"
                />

            <TextView
                android:id="@+id/displayEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/bookingEndTime"
                app:layout_constraintLeft_toLeftOf="@id/displayUserName"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>